		{% for atelier in formAddSession.programmers.atelier %}
			<li class="atelier">
				{{ form_row(atelier) }}
			</li>
		{% endfor %} #}

	</ul>
	{# Prévenir l'affichage du champs en prétendant qu'il est déjà remplis #}
	{# {% do formAddSession.chien.setRendered() %} #}
	{# submit button #}
		<button type="submit" class="btn btn-outline-primary"> {% if editMode %}
			Modifier
		{% else %}
			Ajouter
		{% endif %}
	</button>

	{# fin du formulaire #}
	{{form_end(formAddSession, {'render_rest': false})}}

{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="/js/collectionHandler.js"></script>
	<script src="/js/collectionHandlerDuree.js"></script>
{% endblock %}
