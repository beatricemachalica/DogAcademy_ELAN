{% extends 'base.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block container %}

	<h2>Bonjour
		{{ actual }}</h2>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Prénom</th>
				<th scope="col">Adresse mail</th>
				<th scope="col">Rôle</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.nom}}</td>
					<td>{{ user.prenom}}</td>
					<td>{{ user.username}}</td>
					<td>{{ user.roles[0]}}</td>
					<td>
						<a href="{{ path('user_edit', {id: user.id}) }}">Editer</a>
					</td>
					<td>
						<a href="{{ path('user_delete', {id: user.id}) }}">Supprimer</a>
					</td>
				</tr>
			{% endfor %}

		{% endblock %}
	</tbody>
