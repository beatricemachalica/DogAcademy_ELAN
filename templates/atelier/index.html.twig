{% extends 'base.html.twig' %}

{% block title %}Liste des Ateliers
{% endblock %}

{% block container %}
	<h1 class="text-center">Liste des Ateliers</h1>
	{# add button #}
	<button class="btn btn-primary myButton">
		<a href="{{ path('atelier_add') }}" class="myButton">Ajouter un atelier</a>
	</button>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Liste des Ateliers</th>
				<th scope="col">Cat√©gorie</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for atelier in ateliers %}
				<tr>
					<td>{{ atelier.libelle |capitalize }}</td>
					<td>{{ atelier.categorie.libelle }}</td>
					<td>
						<a href="{{ path('atelier_edit', {id: atelier.id}) }}">Editer</a>
					</td>
					<td>
						<a href="{{ path('atelier_delete', {id: atelier.id}) }}">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
