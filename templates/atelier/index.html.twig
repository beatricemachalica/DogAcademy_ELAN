{% extends 'base.html.twig' %}

{% block title %}Liste des Ateliers
{% endblock %}

{% block container %}
	<h1 class="text-center">Liste des Ateliers</h1>
	<a href="{{ path('atelier_add') }}">Ajouter un atelier</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Liste des Ateliers</th>
				<th scope="col">Description</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for atelier in ateliers %}
				<tr>
					<td>{{ atelier.libelle |capitalize }}</td>
					<td>{{ atelier.description }}</td>
					<td>
						<a href="{{ path('atelier_edit', {id: atelier.id}) }}">Editer</a>
					</td>
					<td>
						<a href="{{ path('atelier_delete', {id: atelier.id}) }}">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
